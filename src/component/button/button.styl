:host
	$time = 0.1s
	background-color rgba(#ddd, 0.7)
	cursor pointer
	margin 0.5em
	display inline-block
	perspective 10em
	border-radius 0.2em

	.content
		background-color #555
		//background-color red
		background-image linear-gradient(rgba(black, 0), rgba(black, 0.15))
		color white
		size 100%
		padding 0.5em 1em
		line-height 1em
		position relative
		outline 1px solid transparent
		text-shadow 0.03em 0.03em 0 rgba(black, 0.4)
		box-shadow 0.1em 0.1em 0.2em rgba(#000, 0.3)
		border-radius 0.2em
		//overflow hidden
		transition transform $time, box-shadow $time
		will-change transform, box-shadow
		overflow hidden

		&:hover
			background-color #5f5f5f

		&:before
			content ''
			absolute top 0 left 0
			size 100%
			z-index 2
			transition opacity $time
			will-change opacity
			opacity 0
			pointer-events none

		&:active
			box-shadow inset 0 0 1em rgba(black, 0.1)
			background-color #5f5f5f

			&:before
				opacity 1

		&.__top
			transform rotateX(25deg) scale(0.9) translateY(-0.1em)

			&:before
				background-image linear-gradient(top, rgba(black, 0.3), rgba(black, 0))

		&.__bottom
			transform rotateX(-25deg) scale(0.9) translateY(0.1em)

			&:before
				background-image linear-gradient(bottom, rgba(black, 0.3), rgba(black, 0))

		&.__left
			transform rotateY(-15deg) scale(0.95, 0.9) translateX(-0.3em)

			&:before
				background-image linear-gradient(left, rgba(black, 0.3), rgba(black, 0))

		&.__right
			transform rotateY(15deg) scale(0.95, 0.9) translateX(0.3em)

			&:before
				background-image linear-gradient(right, rgba(black, 0.3), rgba(black, 0))

