:host
	display flex
	flex-direction column
	align-items stretch

	.header
		background-color white
		display flex
		flex-direction row
		flex-shrink 0
		position relative
		background-image linear-gradient(right, rgba(black, 0.08), rgba(black, 0.02), rgba(black, 0.08))
		box-shadow 0 0 0.5em rgba(#000, 0.3)
		z-index 1

		.titles
			display flex
			flex-grow 1
			flex-direction row

	.content
		position relative
		flex-grow 1
		display flex
		flex-direction column
		z-index 0
		overflow hidden

