:host
	display flex
	flex-direction column
	align-items stretch

	.titles
		background-color white
		display flex
		flex-shrink 0
		flex-direction row
		position relative
		background-image linear-gradient(right, rgba(black, 0.08), rgba(black, 0.02), rgba(black, 0.08))
		box-shadow 0 0 1em rgba(#000, 0.6)
		//z-index 1

		&:before
			content ''
			display block
			absolute top 0 left 0
			size 100%
			pointer-events none
			box-shadow inset 0 -0.1em 0.2em rgba(black, 0.1)

	.content
		position relative
		flex-grow 1
		display flex
		flex-direction column
		//z-index 0
		overflow hidden

