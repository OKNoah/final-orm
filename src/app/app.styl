:host
	$time = 0.5s
	display block
	position relative
	absolute top 0 left 0
	size 100%
	background-image linear-gradient(#444, #333)
	background-size cover
	background-position center
	display flex
	flex-direction column

	.content
		flex-grow 1
		z-index 0

		.home-page
			display flex
			flex-direction row

		.settings-page
			display flex
			flex-direction column
			justify-content center
			align-items center

