:host
	display inline-block
	cursor pointer
	margin 0.5em
	height 2em
	position relative
	overflow hidden
	background-color #555
	background-image linear-gradient(rgba(black, 0), rgba(black, 0.15))
	color white
	text-shadow 0.03em 0.03em 0 rgba(black, 0.4)
	border-radius 0.2em
	line-height 2em
	box-shadow 0.1em 0.1em 0.2em rgba(#000, 0.3)

	&:hover
		background-color #5f5f5f

	.label
		height 2em
		background-image url('folder.png')
		background-size auto 60%
		background-position 0.5em center
		background-repeat no-repeat
		padding-left 2.5em
		padding-right 0.5em

	.input
		absolute top 0 left 0
		size 100%
		padding-left 102%
		outline none
		opacity 0

	.info
		padding 0 0.5em

		.name
			margin-left 1em

		.controls
			absolute top 0 left 0
			size 1em 100%
			display flex
			flex-direction column
			align-items stretch
			background-color #999
			background-image linear-gradient(rgba(black, 0), rgba(black, 0.15))

			&:hover
				background-color #aaa

			.reset
				flex-grow 1
				background-repeat no-repeat
				background-position center
				background-size 90% auto
				background-image url('cross.png')
				box-shadow 0 0 0.3em rgba(black, 0.3)



