:host
	display block
	$time = 0.4s

	.move-wrapper
		transition transform $time
		transform-origin top left
		will-change transform

		.__ms &
			transition none

		&.__dragging
			transition none

	.zoom-wrapper
		display flex
		flex-direction column
		align-items center
		justify-content center
		transition transform $time
		transform-origin top left
		will-change transform

		.__ms &
			transition none

	.img
		height 20em
		display block
		box-shadow 0 0 1em rgba(black, 0.7)
		transform rotate3d(0, 0, 0, 0)


