:host
	$time = .3s
	display block
	padding 0 1em
	line-height 2em
	position relative
	transition border-radius $time, transform $time cubic-bezier(0.545, 0.090, 0.535, 0.795)
	z-index 0
	padding-left 1em

	&:hover
		background-color #e9e9e9

	&.__active
		background-color #555
		background-image linear-gradient(rgba(black, 0), rgba(black, 0.15))
		color white
		text-shadow 0.03em 0.03em 0 rgba(black, 0.4)
		transform scaleY(8)
		border-radius 0.2em
		overflow hidden
		border-left 0.5em solid #999
		padding-left 0.5em
		z-index 2
		box-shadow 0.1em 0.1em 0.2em rgba(#000, 0.3)

	&.__focus
		transform none
		transition opacity $time, transform $time cubic-bezier(0.19, 1, 0.22, 1)
		border-radius 0

