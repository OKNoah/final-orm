:host
	background-color rgba(#ddd, 0.7)
	display flex
	flex-direction column
	align-items stretch
	box-shadow 0 0 0.2em rgba(black, 0.2)

	.titles
		background-color white
		display flex
		flex-direction row
		position relative
		background-image linear-gradient(right, rgba(black, 0.08), rgba(black, 0.02), rgba(black, 0.08))

		&:before
			content ''
			display block
			absolute top 0 left 0
			size 100%
			pointer-events none
			box-shadow inset 0 -0.1em 0.2em rgba(black, 0.1)

	.content
		position relative
		flex-grow 1

